extends layout

block content
  // Portfolio Grid Section
  section#portfolio
    .container
      .row
        .col-lg-12.text-center
          h2 Portfolio
          |                     
          hr.star-primary
      |             
      .row
        each row, i in rows
          .col-sm-4.portfolio-item
            a.portfolio-link(href='#portfolioModal#{i}', data-toggle='modal')
              .caption
                .caption-content
                  i.fa.fa-search-plus.fa-3x
              |                         
              img.img-responsive(src='img/portfolio/#{row.image}', alt='')
                  
  // Portfolio Modals
  each row, i in rows
    div(id='portfolioModal#{i}').portfolio-modal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-content
        .close-modal(data-dismiss='modal')
          .lr
            .rl
        |             
        .container
          .row
            .col-lg-8.col-lg-offset-2
                h2 #{row.title}
                |                             
                hr.star-primary
                |                             
                img.img-responsive.img-centered(src='img/portfolio/#{row.image}', alt='')
                |                             
                p #{row.description}
                |                             
                ul.list-inline.item-details
                  li
                    | Client: 
                    strong #{row.client}
                  |                                 
                  li
                    | Date: 
                    strong #{moment(row.date).format("DD-MM-YY")}
                      
                  |                                 
                  li
                    | Service: 
                    strong #{row.service}
                |                             
                button.btn.btn-default(type='button', data-dismiss='modal')
                  i.fa.fa-times
                  |  Close
  
